<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <variable
            name="isPreferred"
            type="boolean" />

        <variable
            name="isFirst"
            type="boolean" />

        <variable
            name="isLast"
            type="boolean" />

        <variable
            name="isDefault"
            type="boolean" />

        <variable
            name="language"
            type="org.mozilla.vrbrowser.ui.adapters.Language" />

        <variable
            name="callback"
            type="org.mozilla.vrbrowser.ui.callbacks.LanguageItemCallback" />
    </data>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/language_row_height"
        android:gravity="center"
        android:focusable="true"
        android:clickable="true"
        android:onClick="@{(v) -> isDefault ? void : callback.onClick(v, language)}"
        android:soundEffectsEnabled="false">

        <LinearLayout
            android:id="@+id/addRemoveButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/add"
                android:layout_width="@dimen/language_row_height"
                android:layout_height="@dimen/language_row_height"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:duplicateParentState="true"
                android:soundEffectsEnabled="false"
                android:src="@drawable/ic_icon_language_add"
                android:tint="@color/fog"
                app:srcCompat="@drawable/ic_icon_language_add"
                app:visibleGone="@{!isPreferred}" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/language_row_height"
                android:layout_height="@dimen/language_row_height"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:contentDescription="Preferred language delete button"
                android:duplicateParentState="true"
                android:soundEffectsEnabled="false"
                android:src="@{isDefault ? @drawable/ic_icon_check : @drawable/ic_icon_language_delete}"
                android:tint="@color/fog"
                app:srcCompat="@drawable/ic_icon_language_delete"
                app:visibleGone="@{isPreferred}" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            style="@style/settingsText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toStartOf="@+id/moveButtons"
            android:layout_toEndOf="@id/addRemoveButtons"
            android:fadingEdgeLength="30dp"
            android:gravity="center_vertical"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@{language.name}"
            app:typeface='@{isDefault ? "bold" : "normal"}'
            tool:text="Language Item" />

        <LinearLayout
            android:id="@+id/moveButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/up"
                android:layout_width="@dimen/language_row_height"
                android:layout_height="@dimen/language_row_height"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:duplicateParentState="true"
                android:onClick="@{(v) -> callback.onMoveUp(v, language)}"
                android:soundEffectsEnabled="false"
                android:src="@drawable/ic_icon_move_up"
                android:tint="@color/fog"
                app:srcCompat="@drawable/ic_icon_move_up"
                app:visibleGone="@{isPreferred &amp;&amp; !isFirst}" />

            <ImageView
                android:id="@+id/down"
                android:layout_width="@dimen/language_row_height"
                android:layout_height="@dimen/language_row_height"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:contentDescription="TODO"
                android:duplicateParentState="true"
                android:onClick="@{(v) -> callback.onMoveDown(v, language)}"
                android:soundEffectsEnabled="false"
                android:src="@drawable/ic_icon_move_down"
                android:tint="@color/fog"
                app:srcCompat="@drawable/ic_icon_move_down"
                app:visibleGone="@{isPreferred &amp;&amp; !isLast}" />
        </LinearLayout>
    </RelativeLayout>
</layout>
