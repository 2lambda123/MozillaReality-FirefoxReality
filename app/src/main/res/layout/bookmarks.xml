<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="isLoading"
            type="boolean" />

        <variable
            name="isEmpty"
            type="boolean" />

        <variable
            name="isSignedIn"
            type="boolean" />

        <variable
            name="isSyncEnabled"
            type="boolean" />

        <variable
            name="lastSync"
            type="long" />

        <variable
            name="isSyncing"
            type="boolean" />

        <variable
            name="callback"
            type="org.mozilla.vrbrowser.ui.callbacks.BookmarksCallback" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/panel_background"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            app:visibleGone="@{!isLoading &amp;&amp; isEmpty}">

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_icon_bookmarks"
                app:srcCompat="@drawable/ic_icon_bookmarks" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="sans-serif"
                android:text="@string/bookmarks_empty"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/fog"
                android:textSize="@dimen/text_biggest_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/fog"
                android:textSize="@dimen/text_medium_big_size"
                android:textStyle="normal"
                android:maxWidth="360dp"
                app:textDrawable="@{@drawable/ic_icon_bookmarked}"
                app:textString="@{@string/bookmarks_description}"
                tools:text="@string/bookmarks_description" />

        </LinearLayout>

        <TextView
            android:id="@+id/loading_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/bookmarks_loading"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/bookmarks_loading"
            android:textAlignment="center"
            android:textColor="@color/fog"
            android:visibility="gone"
            app:visibleGone="@{isLoading}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            app:visibleGone="@{!isLoading &amp;&amp; !isEmpty}">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_icon_bookmarks"
                android:tint="@color/concrete"
                app:srcCompat="@drawable/ic_icon_bookmarks" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/icon"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:text="@string/bookmarks_title"
                android:textColor="@color/smoke"
                android:textSize="@dimen/text_biggest_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/syncDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/buttons_layout"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="@color/rhino"
                android:textSize="@dimen/text_medium_size"
                android:textStyle="italic"
                android:text="@{!isSyncEnabled ? @string/fxa_account_syncing_off : null}"
                app:lastSync="@{lastSync}"
                app:visibleGone="@{isSignedIn}"/>

            <FrameLayout
                android:id="@+id/buttons_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">
                <Button
                    android:id="@+id/syncButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:enabled="@{isSyncEnabled &amp;&amp; !isSyncing}"
                    android:background="@drawable/content_panel_button_background"
                    android:drawableStart="@{isSyncing ? null : @drawable/ic_icon_settings_sign_in}"
                    android:drawableTint="@color/library_panel_button_text_color"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:onClick="@{(view) ->  callback != null ? callback.onSyncBookmarks(view) : void}"
                    android:padding="5dp"
                    android:text="@{isSyncing ? @string/fxa_syncing : @string/fxa_sync}"
                    android:textColor="@color/library_panel_button_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:visibleGone="@{isSignedIn &amp;&amp; isSyncEnabled}"/>

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/content_panel_button_background"
                    android:drawableStart="@drawable/ic_icon_settings_sign_in"
                    android:drawableTint="@color/library_panel_button_text_color"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:onClick="@{(view) ->  callback != null ? callback.onFxALogin(view) : void}"
                    android:padding="5dp"
                    android:text="@string/fxa_account_sing_to_sync"
                    android:textColor="@color/library_panel_button_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:visibleGone="@{!isSignedIn}"/>

                <Button
                    android:id="@+id/syncSettingsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/content_panel_button_background"
                    android:drawableStart="@drawable/ic_icon_settings_sign_in"
                    android:drawableTint="@color/library_panel_button_text_color"
                    android:drawablePadding="5dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:onClick="@{(view) ->  callback != null ? callback.onFxASynSettings(view) : void}"
                    android:padding="5dp"
                    android:text="@string/fxa_account_sync_settings"
                    android:textColor="@color/library_panel_button_text_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:visibleGone="@{isSignedIn &amp;&amp; !isSyncEnabled}"/>
            </FrameLayout>
        </RelativeLayout>

        <org.mozilla.vrbrowser.ui.views.CustomRecyclerView
            android:id="@+id/bookmarks_list"
            style="@style/customRecyclerViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:contentDescription="Bookmarks feed"
            android:fadingEdgeLength="60dp"
            android:requiresFadingEdge="vertical"
            app:layoutManager="org.mozilla.vrbrowser.ui.adapters.CustomLinearLayoutManager"
            app:visibleGone="@{!isLoading &amp;&amp; !isEmpty}" />

    </LinearLayout>
</layout>